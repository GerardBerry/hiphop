body.hop pre.hiphop {
    border-left-color: #faab02;
}

.fontifier-prog span.hiphop,
.fontifier-prog span.hop {
  background-color: #777;
  border-radius: 1px;
  color: white;
}

.fontifier-prog span.module,
.fontifier-prog span.interface,
.fontifier-prog span.machine {
  color: #6959cf;
}

.fontifier-prog span.await {
    color: #E45840
}

body.library h3.markdown {
    font-size: 140%;
    text-shadow: #ccc 1px 1px 1px;
}
