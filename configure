hop=hop

hopversion=`$hop --configure --version`
hopminorversion=`$hop --configure --minor-version`

# docker/Dockerfile.in
docker=docker/Dockerfile
rm -f $docker 2> /dev/null
cat $docker.in \
  | sed -e "s|@HOPVERSION@|$hopversion|" \
	-e "s|@HOPMINORVERSION@|$hopminorversion|" \
	-e "s|@BIGLOOVERSION@|$bglversion|" \
   	>> $docker
