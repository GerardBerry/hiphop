# configuration and variables
release=@VERSION@
minor=@MINOR@

repodir=$HOME/prgm/distrib
basedir=`dirname $0`

if [ "$basedir " = ". " ]; then
  basedir=`pwd`
fi

targetdir=$HOME/prgm/project/hop/hopbrew/Formula

while : ; do
  case $1 in
    "")
      break;;
    -h|--help)
      echo "usage makebrew.sh [-O dir] --repodir [dir] opt1 opt2 ...";
      exit 1;;
    --repodir)
      shift;
      repodir=$1;;
    -O)
      shift
      targetdir=$1;;
    *)
      bglconfigureopt="$1 $bglconfigureopt";;

  esac
  shift
done

if [ "$REPODIR " != " " ]; then
  repodir=$REPODIR;
fi

sha256=`sha256sum $repodir/hiphop-$release$minor.hz | awk '{ print $1 }'`
cat hiphop.rb.in | \
  sed -e "s/@RELEASE@/$release$minor/" \
      -e "s/@SHA256@/$sha256/" \
      > $targetdir/hiphop.rb
